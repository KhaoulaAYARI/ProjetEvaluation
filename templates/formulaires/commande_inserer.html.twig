{% extends 'base.html.twig' %}

{% block title %}Hello FormulairesController!{% endblock %}

{% block body %}
<h4>Formulaire insertion Commande</h4>
{{ form_start(formulaireCommande, {'attr': {'id': 'insertionCommandeForm'}}) }}
{{ form_row(formulaireCommande.numero) }}
{{ form_row(formulaireCommande.dateCommande) }}
{{ form_row(formulaireCommande.statutCommande) }}
{{ form_row(formulaireCommande.commandeFournisseur) }}

<input type="submit" value="Inserer">
{{ form_end(formulaireCommande) }}
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('insertionCommandeForm');
        //id attribute on the form: Setting an id (insertionCommandeForm) ensures that your JavaScript accurately selects the correct form.
        if (form) {
			//The if (form) line verifies that the form is in the DOM before trying to add the event listener.
            form.addEventListener('submit', function(event) {
                alert('Insertion r√©ussie');
				// Redirect to the new path after the alert
                window.location.href = '{{ path("afficherToutesCommandes") }}';
            });
        }
    });
</script>
{% endblock %}