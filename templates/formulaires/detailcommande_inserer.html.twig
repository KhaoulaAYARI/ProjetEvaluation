{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('detailCommandeForm');
        //id attribute on the form: Setting an id (detailCommandeForm) ensures that your JavaScript accurately selects the correct form.
        if (form) {
			//The if (form) line verifies that the form is in the DOM before trying to add the event listener.
            form.addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent the default form submission
                alert('Insertion r√©ussie');
				// Redirect to the new path after the alert
                window.location.href = '{{ path("afficherTousdetailsCommandes") }}';
            });
        }
    });
</script>
