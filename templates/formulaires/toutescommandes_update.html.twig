{% extends 'base.html.twig' %}

{% block title %}Hello FormulairesController!{% endblock %}

{% block body %}
<h4>Formulaire update Commande</h4>
{{ form_start(form, {'attr': {'id': 'updateCommandeForm'}}) }}
{{ form_row(form.numero) }}
{{ form_row(form.dateCommande) }}
{{ form_row(form.statutCommande) }}
{{ form_row(form.commandeFournisseur) }}

<input type="submit" value="Update !">
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('updateCommandeForm');
        //id attribute on the form: Setting an id (updateCommandeForm) ensures that your JavaScript accurately selects the correct form.
        if (form) {
			//The if (form) line verifies that the form is in the DOM before trying to add the event listener.
            form.addEventListener('submit', function(event) {
                alert('Insertion r√©ussie');
				// Redirect to the new path after the alert
                window.location.href = '{{ path("afficherToutesCommandes") }}';
            });
        }
    });
</script>
{% endblock %}