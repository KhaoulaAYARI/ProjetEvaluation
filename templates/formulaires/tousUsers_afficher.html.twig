{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }} {# Si le parent contient des stylesheets, on les garde #}
    <link rel="stylesheet" href="{{ asset('liste.css') }}">
{% endblock %}
{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container">
    <h4 class="title">Liste des Utilisateurs</h4>
    <div class="item-list">
        {% for user in tousUsers %}
            <div class="item-card">
                <h5 class="item-matricule">Matricule: {{ user.matricule }}</h5>
                <p><strong>Nom:</strong> {{ user.nom }}</p>
                <p><strong>Email:</strong> {{ user.email }}</p>
                <div class="actions">
                    <a href="{{ path('updateUser', {id: user.id}) }}" class="btn update">Update</a>
                    {# <a href="" class="btn consult">Consulter</a> #}
                    <a href="{{ path('deleteUser', {id: user.id}) }}" class="btn delete">Delete</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

