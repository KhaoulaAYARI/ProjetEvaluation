{% extends 'base.html.twig' %}

{% block title %}Hello FormulairesController!{% endblock %}

{% block body %}
<h4>Formulaire Update Produit</h4>
{{ form_start(form, {'attr': {'id': 'produitUpdateForm'}}) }}
{{ form_row(form.matricule) }}
{{ form_row(form.description) }}
{{ form_row(form.prix) }}
{{ form_row(form.produitFournisseur) }}

<input type="submit" value="Update !">
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('produitUpdateForm');
        //id attribute on the form: Setting an id (produitUpdateForm) ensures that your JavaScript accurately selects the correct form.
        if (form) {
			//The if (form) line verifies that the form is in the DOM before trying to add the event listener.
            form.addEventListener('submit', function(event) {
                alert('Update r√©ussie');
				// Redirect to the new path after the alert
                window.location.href = '{{ path("afficherTousProduits") }}';
            });
        }
    });
</script>
{% endblock %}