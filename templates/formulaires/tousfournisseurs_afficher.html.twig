{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('listeFournisseur.css') }}">
{% endblock %}
{% block title %}Liste des Fournisseurs{% endblock %}

{% block body %}
<div class="container">
    <h4 class="title">Liste des Fournisseurs</h4>
    <div class="item-list">

        {% for fournisseur in tousfournisseurs %}
            <div class="item-row">
                <div class="item-info">
                    <span class="info-title">Nom:</span> {{ fournisseur.nom }}
                </div>
                <div class="item-info">
                    <span class="info-title">Email:</span> {{ fournisseur.email }}
                </div>
                
                <div class="actions">
                    <a href="{{ path('updateFournisseur', {id: fournisseur.id}) }}" class="btn btn-update">Update</a>
                    <a href="{{ path('deleteFournisseur', {id: fournisseur.id}) }}" class="btn btn-delete">Delete</a>
                    <a href="{{ path('afficherunFournisseur', {id: fournisseur.id}) }}" class="btn btn-consult">Consulter</a>
                    <a href="{{ path('evaluerFournisseur', {id: fournisseur.id}) }}" class="btn btn-eval">Ã‰valuer</a>
                </div>
            </div>
        {% endfor %}
        
    </div>
</div>
{% endblock %}
