{% block body %}
    <div class="formulaire-insertion">
        <h4>Formulaire insertion Produit</h4>
        {{ form_start(formulaireProduit, {'attr': {'id': 'insertionForm'}}) }}
        {{ form_row(formulaireProduit.matricule) }}
        {{ form_row(formulaireProduit.description) }}
        {{ form_row(formulaireProduit.prix) }}
        {{ form_row(formulaireProduit.produitFournisseur) }}
        <input type="submit" value="Inserer">
        {{ form_end(formulaireProduit) }}
    </div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('insertionForm');
        //id attribute on the form: Setting an id (produitInsertionForm) ensures that your JavaScript accurately selects the correct form.
        if (form) {
			//The if (form) line verifies that the form is in the DOM before trying to add the event listener.
            form.addEventListener('submit', function(event) {
                alert('Insertion r√©ussie');
				// Redirect to the new path after the alert
                window.location.href = '{{ path("afficherTousProduits") }}';
            });
        }
    });
</script>
{% endblock %}
